.list-wrapper
  padding: 10px 0 54px 0
  -webkit-transition: all 0.8s
  &.starlist-enter-active
    opacity: 1
  &.starlist-enter, &.starlist-leave-active
    opacity: 0
  .list-item
    margin: 0 10px
    margin-bottom: 15px
    background: #fff
    box-shadow: 2px 3px 4px rgba(34,25,25,0.4)
    a
      display: block
      img
        display: block
        width: 100%
        height: 190px
      p
        padding: 5px
        &.name
          font-size: 24px
          color: #666
        &.title
          font-size: 14px
          color: #999
.loading-bottom
  padding-bottom: 8px
  text-align: center
  font-size: 16px
  color: #666
  i
    display: inline-block
    margin-right: 4px
    vertical-align: middle
    font-size: 18px
    animation: rotate 1.2s linear infinite
    -webkit-animation: rotates 1.2s linear infinite
  @keyframes rotate
    0%
      transform: rotate(0deg)
    50%
      transform: rotate(180deg)
    100%
      transform: rotate(360deg)
  @-webkit-keyframes rotates
    0%
      -webkit-transform: rotate(0deg)
    50%
      -webkit-transform: rotate(180deg)
    100%
      -webkit-transform: rotate(360deg)